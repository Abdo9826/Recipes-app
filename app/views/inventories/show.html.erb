<h1><%= @inventory.name %></h1>
<% if can? :manage, @inventory %>
<%= link_to 'Add food',"/inventory_foods/#{@inventory.id}/new", class: 'btn btn-primary'%>
<% end %>

<div>
    <table class="table table-striped table-bordered w-100 mt-4">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% if @foods.count == 0 %>
      <tr class="alert alert-warning">
        <td colspan="3" class="text-center">No foods in this inventory</td>
      </tr>      
    <% else %>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= button_to 'Delete', "/inventory_foods/#{@inventory.id}/destroy/#{food.id}", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>